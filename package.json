{
  "name": "@ljtang2009/lint-configuration",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "cm": "git-cz",
    "show-duplicated-eslint-rules": "tsx src/util/duplicatedRules/showDuplicatedESLintRules.ts",
    "release": "semantic-release",
    "build": "rm -rf dist && tsc --project tsconfig.production.json && vite build",
    "lint": "pnpm lint:eslint && pnpm lint:markdown && pnpm lint:browserslist && pnpm lint:style && pnpm lint:cspell",
    "lint:eslint": "eslint .",
    "lint:eslint:view": "pnpx @eslint/config-inspector",
    "lint:eslint:fix": "time eslint --fix .",
    "lint:markdown": "markdownlint-cli2",
    "lint:browserslist": "browserslist-lint",
    "lint:browserslist:updateBrowsers": "pnpm update:caniuse && browserslist-lint",
    "lint:style": "stylelint \"**/*.{css,less,scss}\"",
    "lint:style:fix": "stylelint --fix \"**/*.{css,less,scss}\"",
    "lint:cspell": "cspell lint --show-context  --show-suggestions .",
    "update:caniuse": "pnpm update caniuse-lite -r",
    "test": "vitest watch",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "eslint",
    "stylelint",
    "typescript-eslint",
    "stylistic",
    "eslint-plugin-jsonc",
    "eslint-plugin-jest",
    "prettier",
    "markdownlint"
  ],
  "author": "Logan Tang <ho_ho_gl@hotmail.com>",
  "homepage": "https://github.com/ljtang2009/lint-configuration",
  "bugs": {
    "url": "https://github.com/ljtang2009/lint-configuration/issues",
    "email": "ho_ho_gl@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ljtang2009/lint-configuration.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@eslint/config-inspector": "^0.4.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/confusing-browser-globals": "^1.0.3",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash": "^4.17.1",
    "@types/node": "^20.12.10",
    "@vitest/coverage-istanbul": "^2.0.4",
    "@vitest/coverage-v8": "^2.0.1",
    "@vitest/ui": "^2.0.1",
    "browserslist-lint": "^0.3.3",
    "caniuse-lite": "^1.0.30001611",
    "commitizen": "^4.3.0",
    "cspell": "^8.7.0",
    "cz-git": "^1.9.1",
    "eslint": "^8.57.0",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint-cli2": "^0.13.0",
    "memfs": "^4.9.3",
    "node-notifier": "^10.0.1",
    "only-allow": "^1.2.1",
    "open": "^10.1.0",
    "open-cli": "^8.0.0",
    "react": "^18.0.0",
    "semantic-release": "^23.0.8",
    "stylelint": "^16.3.1",
    "tslib": "^2.6.2",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vitest": "^2.0.1",
    "xss": "^1.0.15"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^1.8.0",
    "@stylistic/eslint-plugin-js": "^2.1.0",
    "@stylistic/eslint-plugin-plus": "^2.1.0",
    "@stylistic/eslint-plugin-ts": "^1.8.1",
    "@typescript-eslint/parser": "^7.8.0",
    "confusing-browser-globals": "^1.0.11",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-jsonc": "^2.15.1",
    "jsonc-eslint-parser": "^2.4.0",
    "lodash": "^4.17.21",
    "stylelint-config-clean-order": "^5.4.2",
    "stylelint-prettier": "^5.0.0",
    "typescript-eslint": "^7.8.0"
  }
}
